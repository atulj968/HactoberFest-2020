/*C program to find difference of two numbers.*/
 
#include <stdio.h>
 
int main()
{
    //definig the variables 
    int a,b;
    int diff;
	
	//taking the input values for variables a and b
    printf("Enter first number: ");
    scanf("%d",&a);
    printf("Enter second number: ");
    scanf("%d",&b);
 
    // check condition to identify which is largest number
    if( a>b )
        diff=a-b;
    else
        diff=b-a;
		
	//printing the output value of the variable diff
    printf("\nDifference between %d and %d is = %d",a,b,diff);
    return 0;
}
